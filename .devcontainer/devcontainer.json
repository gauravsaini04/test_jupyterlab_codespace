{
    	"name": "Only Jupyter",
    	"hostRequirements": {
      	"cpus": 16
    	},
    	"build": {
		"dockerfile": "./Dockerfile",
		"context": "."
    	},
		"initializeCommand": ". /etc/profile.d/env.sh",
		"containerEnv": {
				"PYTHON_PATH": "/usr/local/python/current",
				"PIPX_HOME": "/usr/local/py-utils",
				"PIPX_BIN_DIR": "/usr/local/py-utils/bin",
				"PATH": "/usr/local/python/current/bin:/usr/local/py-utils/bin:${PATH}"
				// "PATH": "/usr/local/python/current/bin:/usr/local/py-utils/bin:/usr/local/share/nvm/current/bin:/usr/local/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/home/$USER/.local/bin:${PATH}"
		},
		"customizations": {
    		"vscode": {
      			"extensions": [
        			"ms-python.python",
        			"ms-python.vscode-pylance",
        			"ms-python.autopep8"
      			],
      			"settings": {
        			"python.defaultInterpreterPath": "/usr/local/python/current/bin/python",
	      			"[python]": {
	        			"editor.defaultFormatter": "ms-python.autopep8"
	      			}
      			}
    		}
  	},
	"containerUser": "vscode"
}
